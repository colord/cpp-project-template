{
  "tasks": [
    {
      "type": "shell",
      "label": "Compile C++",
      "command": "C:\\Program Files\\w64devkit\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-Wall",
        "-Wextra",
        "-Wfloat-equal",
        "-Wshadow",
        "-Wconversion",
        "-Wpedantic",
        "-Wlogical-op",
        "-Wnull-dereference",
        "-Wno-unused-parameter",
        "-g3",
        "${file}",
        "-o",
        "${workspaceRoot}\\bin\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "icon": {
        "id": "gear",
        "color": "terminal.ansiRed"
      },
      "detail": "Compile C++ programs using g++ (w64devkit)"
    },
    {
      "type": "shell",
      "label": "Run Cppcheck",
      "command": "cppcheck",
      "args": [
        "--language=c++",
        "--relative-paths=${fileDirname}",
        "--enable=warning,portability",
        "--max-ctu-depth=4",
        "${file}",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": {
        "owner": "cppcheck",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(\\S+):(\\d+):(\\d+): (warning|error): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "group": "build",
      "icon": {
        "id": "check",
        "color": "terminal.ansiGreen"
      },
      "detail": "Analyze code using Cppcheck"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: gcc.exe Debug",
      "command": "C:\\Program Files\\w64devkit\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${workspaceRoot}\\bin\\debug\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}